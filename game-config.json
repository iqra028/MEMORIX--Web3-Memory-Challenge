{
  "game": {
    "name": "Memorix",
    "version": "1.0.0",
    "description": "Simon-style Web3 memory game with blockchain rewards"
  },
  "grid": {
    "defaultSize": 3,
    "minSize": 2,
    "maxSize": 10,
    "allowCustomSize": true
  },
  "rounds": {
    "types": ["NORMAL", "TIMED", "LADDER"],
    "defaultType": "NORMAL",
    "minSteps": 3,
    "maxSteps": 20,
    "defaultSteps": 5
  },
  "timing": {
    "show_duration_ms": 500,
    "interval_between_steps_ms": 300,
    "input_timeout_ms": 30000,
    "fast_time_threshold_ms": 10000
