        "gridSize": 4,
        "steps": 7,
        "showDuration": 400,
        "intervalBetween": 300
      },
      {
        "name": "Expert",
        "gridSize": 5,
        "steps": 10,
        "showDuration": 300,
        "intervalBetween": 200
      }
    ]
  },
  "network": {
    "localhost": {
      "url": "http://127.0.0.1:8545",
      "chainId": 31337
    }
